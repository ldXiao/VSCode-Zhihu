{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"outDir": "out",
		"sourceMap": true,
		// "strict": true   /* enable all strict type-checking options */
		"allowJs": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": [
		"test/**/*",
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
	]
}